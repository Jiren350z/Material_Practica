@model Proyecto3V3_Camilo_P_Diego_M.Models.Farmacium

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Farmacia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idfar" />
            <div class="form-group">
                <label asp-for="HorarioDeAtencion" class="control-label"></label>
                <input asp-for="HorarioDeAtencion" class="form-control" />
                <span asp-validation-for="HorarioDeAtencion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicacion" class="control-label"></label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadDeStock" class="control-label"></label>
                <input asp-for="CapacidadDeStock" class="form-control" />
                <span asp-validation-for="CapacidadDeStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListaDeMedicamentos" class="control-label"></label>
                <input asp-for="ListaDeMedicamentos" class="form-control" />
                <span asp-validation-for="ListaDeMedicamentos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
